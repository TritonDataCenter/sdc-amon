<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="amon-zwatch">
  <service name="smartdc/agent/amon-zwatch" type="service" version="@@VERSION@@">

    <create_default_instance enabled="true"/>
    <single_instance/>

    <dependency name="zwatch-amon-relay" grouping="require_all" restart_on="error" type="service">
      <service_fmri value="svc:/smartdc/agent/amon-relay"/>
    </dependency>

    <dependent name="zwatch-zones" grouping="optional_all" restart_on="none">
      <service_fmri value="svc:/system/zones:default" />
    </dependent>

    <exec_method
      type="method"
      name="start"
      exec="@@BASEDIR@@/bin/amon-zwatch &amp;"
      timeout_seconds="10">
      <method_context>
        <method_credential user="root" group="staff"/>
        <method_environment>
          <envvar name='LD_PRELOAD_32' value='/usr/lib/extendedFILE.so.1' />
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method type="method" name="restart" exec=":kill" timeout_seconds="10">
      <method_context>
        <method_credential user="root" group="staff"/>
      </method_context>
    </exec_method>

    <exec_method type="method" name="stop" exec=":kill" timeout_seconds="10">
      <method_context>
        <method_credential user="root" group="staff"/>
      </method_context>
    </exec_method>

    <property_group name="startd" type="framework" />
    <property_group name="application" type="application" />

    <stability value="Evolving"/>

    <template>
      <common_name>
        <loctext xml:lang="C">SDC Amon Zone Watch Daemon</loctext>
      </common_name>
    </template>

  </service>

</service_bundle>
