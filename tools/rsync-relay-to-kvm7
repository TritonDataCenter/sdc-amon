#!/bin/bash
#
# Rsync the relay in this working copy to the install on the bh1-kvm7 GZ.
#

#set -o xtrace
set -o errexit

TOP=$(cd $(dirname $0)/../; pwd)
RELAY_DIR=$TOP/relay
NODE=root@10.2.207.2

extraOpts=
if [[ $(uname -s) != "SunOS" ]]; then
    extraOpts="--exclude *.node"
fi

rsync -av ${RELAY_DIR}/ \
    $NODE:/opt/smartdc/agents/lib/node_modules/amon-relay/ \
    --exclude deps/ \
    $extraOpts \
    --exclude amon-common \
    --exclude amon-plugins \
    --exclude buffertools \
    --exclude zsock/ \
    --exclude zutil/ \
    --exclude tmp/
rsync -av ${TOP}/common/ \
    $NODE:/opt/smartdc/agents/lib/node_modules/amon-relay/node_modules/amon-common/ \
    $extraOpts \
    --exclude tmp/
rsync -av ${TOP}/plugins/ \
    $NODE:/opt/smartdc/agents/lib/node_modules/amon-relay/node_modules/amon-plugins/ \
    $extraOpts \
    --exclude tmp/
rsync -av ${TOP}/test/ \
    $NODE:/opt/smartdc/agents/lib/node_modules/amon-relay/test/ \
    $extraOpts \
    --exclude "*.log" \
    --exclude "config.json" \
    --exclude "prep.json" \
    --exclude tmp/

ssh ${NODE} svcadm clear amon-relay || true
ssh ${NODE} svcadm restart amon-relay
